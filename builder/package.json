{
  "name": "builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "concurrently \"cross-env NODE_ENV=development BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "yarn react-build && yarn build:win32",
    "dist": "yarn build:win32",
    "build:osx": "electron-builder --mac",
    "build:linux32": "electron-builder --linux --ia32",
    "build:linux64": "electron-builder --linux --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "release": "yarn react-build && electron-builder --publish=always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "./build/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.67",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "productName": "react-electron",
    "asar": true,
    "appId": "org.sss.electron-react",
    "directories": {
      "buildResources": "./build",
      "output": "./dist",
      "app": "."
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extends": null,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "shortcutName": "react-electron",
      "artifactName": "react-electron-setup-${version}.${ext}",
      "uninstallDisplayName": "react-electron-install",
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  }
}
